# App Configuration
APP_NAME=Fake News Detector API
DEBUG=false
PORT=8000

# Database (opcional para V1)
DATABASE_URL=postgresql://user:password@localhost/fakenews

# Redis (opcional - para caching)
REDIS_URL=redis://localhost:6379

# Evolution API (WhatsApp)
EVOLUTION_API_URL=your_evolution_api_url_here
EVOLUTION_API_KEY=your_evolution_api_key_here

# AI Services (OBRIGATÓRIO)
OPENAI_API_KEY=your_openai_api_key_here

# Google (opcional - backup)
GOOGLE_API_KEY=your_google_api_key_here

# Security
SECRET_KEY=your-secret-key-here

# Processing Limits
MAX_TEXT_LENGTH=10000
MAX_IMAGE_SIZE_MB=10
TEXT_PROCESSING_TIMEOUT=5
IMAGE_PROCESSING_TIMEOUT=12

# Selenium/Web Scraping (Docker)
# Deixe como está se estiver usando Docker Compose
SELENIUM_REMOTE_URL=http://selenium:4444/wd/hub
USE_SELENIUM_REMOTE=true

# Selenium/Web Scraping (Local)
# Se rodar localmente SEM Docker, use:
# SELENIUM_REMOTE_URL=http://localhost:4444/wd/hub
# USE_SELENIUM_REMOTE=auto
